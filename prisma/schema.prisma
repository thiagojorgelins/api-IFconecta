// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @default(autoincrement()) @id
  email     String  @unique
  name      String
  password  String
  posts     Post[]
  comments  Comment[]
}

model Post {
  id        Int      @default(autoincrement()) @id
  category  String
  title     String
  subtitle  String
  content   String
  postImage String?
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int?
  comments  Comment[]
}

model Comment {
  id        Int      @default(autoincrement()) @id
  content   String
  post      Post?    @relation(fields: [postId], references: [id])
  author    User?    @relation(fields: [authorId], references: [id])
  postId    Int?
  authorId  Int?
}
